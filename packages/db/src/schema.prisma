generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    username  String   @unique
    email     String
    name      String
    password  String
    Room      Room?    @relation(fields: [roomId], references: [id])
    roomId    Int?
}

model Room {
    id        Int      @id @default(autoincrement())
    name      String
    createdAt DateTime @default(now())
    users     User[]
}
