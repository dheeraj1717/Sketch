generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  createdAt     DateTime       @default(now())
  username      String         @unique
  email         String
  name          String
  password      String
  rooms         Room[]
  refreshTokens RefreshToken[]
}

model Room {
  id        String   @id @default(uuid())
  slug      String   @unique
  createdAt DateTime @default(now())
  adminId   String
  admin     User     @relation(fields: [adminId], references: [id])
  Shapes    Shapes[]
}

model Shapes {
  id     String @id @default(uuid())
  type   String // "rectangle", "circle", "line", "text", etc.
  x      Float
  y      Float
  width  Float?
  height Float?
  radius Float?

  // Style properties
  fill        String? // color in hex format
  stroke      String? // border color
  strokeWidth Float?  @default(1)
  opacity     Float?  @default(1)

  // Text properties (for text shapes)
  text       String?
  fontSize   Float?
  fontFamily String?

  // Line/Path properties
  points Json? // For complex shapes, store array of points

  roomId String
  room   Room    @relation(fields: [roomId], references: [id])
  chatId String?
}

model RefreshToken {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  refreshToken String   @unique
  expiresAt    DateTime

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
}
